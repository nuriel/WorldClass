  <li id="question_<%= question.id %>">
      <a class="pull-left" href="#">
      <%= gravatar_image_tag(question.user.email, :alt => 'question.user.name.humanize', size: "64x64") %>
    </a>
    <div class="media-body">
      <h4 class="media-heading"><%= "(#{question.time}) #{question.title}" %></h4>
      <p><%= simple_format question.content %></p>
      <!-- Nested media object -->
      <em>
        -- <%= question.user.name %>
        | <%= pluralize question.reputation_for(:votes).to_i, "vote" %>
        <% if current_user && !current_user.voted_for?(question) %>
          | <%= link_to "up", vote_classroom_question_path(@classroom, question, type: "up"), method: "post" %>
          | <%= link_to "down", vote_classroom_question_path(@classroom, question, type: "down"), method: "post" %>
        <% end %>
      </em>
      <%= form_for [question.classroom, question, question.answers.build()], :html => { :id => 'new_question_form', :class => 'form-horizontal' } do |f| %>
        answer:
        <div class="control-group">
          <%= f.hidden_field :question_id, value: question.id  %>
          <%= f.label :content, 'your answer', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :content, rows: 2, :class => 'text_area new_answer_field' %>
          </div>
        </div>
        <%= f.submit "Send" %>
      <% end %>
        <% question.answers.each do |answer| %>
          <% if answer.persisted? %>
          <div id="question_<%= question.id %>_answers" class="media">
            <a class="pull-left" href="#">
              <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 64px; height: 64px;" src="data:image/png;base64,">
            </a>
            <div id="answer_<%= answer.id %>" class="media-body">
              <h4 class="media-heading"><%= answer.user.name %></h4>
                <%= simple_format answer.content %>
              <!-- Nested media object -->
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </li>