<h1>Listing classrooms</h1>

<table>
  <tr>
    <th>Teacher</th>
    <th>Video url</th>
    <th>Video provider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.teacher.name %></td>
    <td><%= link_to classroom.video_url, classroom.video_url, target: "_blank" %></td>
    <td><%= classroom.video_provider %></td>
    <td><%= link_to 'Show', classroom %></td>
    <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
    <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

